/* pages/admin/transport/list1/list1.wxss */
.tab_contain {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  font-family: cursive;
  border-bottom: 1rpx solid #eee;
}

.tab_one {
  width: 50%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.tab_one view {
  height: 100%;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  letter-spacing: 2rpx;
}

.tab_on {
  font-size: 32rpx;
  font-weight: 600;
  border-bottom: 4rpx solid #fbbd08;
}

.search_box {
  margin: 10px auto;
  font-family: cursive;
  width: 500rpx;
  height: 66rpx;
  border-radius: 33rpx;
  border: 1rpx solid grey;
  background: #fff;
  display: flex;
  align-items: center;
}

.search_ico {
  padding-left: 30rpx;
  width: 32rpx;
  height: 32rpx;
}

.search_text {
  padding-left: 10rpx;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  color: rgb(167, 167, 167);
}

.card_box {
  width: 100%;
  display: flex;
  box-sizing: border-box;
  padding: 10rpx 0rpx;
  flex-wrap: wrap;
}

.card_item {
  margin: 10rpx auto;
  width: 90%;
  padding: 20rpx;
  border-radius: 20rpx;
  border: 1rpx solid grey;
  font-family: cursive;
  display: flex;
  box-sizing: border-box;
  flex-direction: row;
}

.item_right {
  width: 30%;
  font-size: 30rpx;
  line-height: 30rpx;
  margin-right: 0rpx;
}

.item_left {
  display: flex;
  flex-direction: column;
  width: 70%;
}

.card_username {
  width: 100%;
  font-size: 35rpx;
  line-height: 45rpx;
}

.card_address {
  width: 100%;
  font-size: 35rpx;
  line-height: 45rpx;
}