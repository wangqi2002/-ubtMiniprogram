.search{
  background-color: #FBBD08;
  padding: 15px 0;
  overflow: hidden;
}

#serachicon{
  width: 15px;
  height: 15px;
  background-color: white;
  position: absolute;
  left: 24px;
  top: 20px;
  /* float: left; */
}

#searchinput{
  width: 220px;
  height: 10px;
  margin-left: 20px;
  padding-left: 20px;
  background-color: white;
  border-radius: 8%;
  float: left;
}

#searchbtn{
  width: 50px;
  background-color: black;
  color: white;
  float: left;
}

#aBook{
  width: 100%;
  background-color: white;
  border-bottom: 2px solid gainsboro;
  /* margin-bottom: 100px; */
  position: relative;
}

#head{
  width: 100px;
  height: 100px;
  float: left;
  margin: 10px;
  /* position: absolute; */
}

#remark{
  border-bottom: 4px solid gray;
}

.author{
  color: gray;
  margin-top: 10px;
  margin-bottom: 40px;
}

